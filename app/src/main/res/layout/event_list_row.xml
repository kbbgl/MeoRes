<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    tools:context="com.inc.kobbigal.meores.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/status_bar"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            android:text="@string/temporary_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_title"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/status_bar"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="@string/temporary_location"
            tools:ignore="RtlHardcoded" />


        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/event_location"
            android:layout_toLeftOf="@id/event_time"
            android:layout_toStartOf="@id/event_time"
            android:paddingRight="10dp"
            android:text="@string/nov_30"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/event_date"
            android:layout_alignParentRight="true"
            android:text="@string/_00_00"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
</android.support.v7.widget.CardView>